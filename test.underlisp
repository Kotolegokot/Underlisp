(program
  (print-ln "Hi! I'm a stupid calculator. I can either multiply or add two numbers.")
  (print-ln "Please, type either + or *, and then two numbers")
  (flush)
  (let (input (get-line))
    (if (= input "*")
      (let ((multiplication (* (str-to-int (get-line)) (str-to-int (get-line)))))
        (print "Your number is ")
        (print-ln multiplication)
        (flush)
      )
      (if (= input "+")
        (let ((sum (+ (str-to-int (get-line)) (str-to-int (get-line)))))
          (print "Your number is ")
          (print-ln sum)
          (flush)
        )
        (print-ln "Error: you entered neither + or *. Go to hell, bitch.")
      )
    )
  )
)
